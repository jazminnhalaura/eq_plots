#!usr/local/bin/python
#-*-coding: UTF -*-

import numpy as np
import matplotlib.pyplot as plt
from matplotlib.ticker import *

recmonth = open('rec_month.txt', 'r')
repmonth = open('rep_month.txt', 'r')
rm = recmonth.readlines()
rp = repmonth.readlines()
xp = []
yp = []
xm = []
ym = []

for m in rm:
	month = m.split('	')[0]
	rec_month = m.split('	')[1]
	xm.append(month)
	ym.append(int(rec_month))

for p in rp:
	p = p.split('   ')
	rep = (p[0]).split('	')[0]
	xp.append(rep)
	yp.append(int((p[0]).split('	')[1]))

yrange = np.arange(0, (max(ym) + 350), 350)
xrange = int(len(xm)/20) + 1

plt.plot(xm, ym, color = 'orchid', label = 'Total Earthquakes')
plt.plot(xp, yp, color = 'deeppink', label = 'Repeating Earthquakes')

plt.xticks(rotation = 45)
plt.yticks(yrange)
ax = plt.gca()
ax.set_xticks(xm[::xrange])

title = ('Number of repeating earthquakes per month. Period ' + ((str(xm[0])).split()[0]) + ' to ' + ((str(xm[-1])).split()[0]))
title = ('Number of earthquakes per month. Period ' + ((str(xm[0])).split()[0]) + ' to ' + ((str(xm[-1])).split()[0]))
title = ('Number of earthquakes and repeating earthquakes per month. Period ' + ((str(xm[0])).split()[0]) + ' to ' + ((str(xm[-1])).split()[0]))
plt.title(title, loc = 'center')
plt.xlabel('Date')
plt.ylabel('Number of repeating earthquakes')
plt.legend()

plt.show()
